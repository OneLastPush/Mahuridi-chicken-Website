<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your egg batches</p>
{{#if batches}}
    <table class="striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each batches}}
                <tr>
                    <td><a href="/batches/{{_id}}">{{name}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{type}}</span></td>
                    <td>
                        <a href="/batches/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-plus"></i>
                        </a>
                        
                        <form action="/batches/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any egg batch</p>
{{/if}}