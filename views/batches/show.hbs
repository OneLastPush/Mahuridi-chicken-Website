<div class="row">
    <div class="col s12 m8">
        <h3>
            <small>{{{editIcon batch.user user batch._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{batch.user.displayName}}</span>
                <img src="{{batch.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/batches/user/{{batch.user._id}}">More From {{batch.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>